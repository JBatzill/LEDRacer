<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_marginBottom="16pt" android:paddingLeft="32dp" android:paddingRight="32dp" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="22pt" android:background="@drawable/on_click_list_item_background">

    <LinearLayout
        android:layout_weight="1.2"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvScore"
            android:layout_weight="2"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Score: 30"/>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">
                <TextView
                    android:id="@+id/tvDate"
                    android:textColor="@android:color/white"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="25.2.2015"/>
            </RelativeLayout>

        </LinearLayout>


    <TextView
        android:id="@+id/tvLevel"
        android:layout_weight="1"
        android:layout_marginLeft="6pt"
        android:textColor="@android:color/white"
        android:layout_gravity="top"
        android:textSize="12dp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Level: 15"/>

</LinearLayout>